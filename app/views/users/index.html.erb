<h1>Listing users</h1>
 <%= link_to 'New user', new_user_path(school_id: params[:school_id]) %>
<table>
  <tr>
    <th>Email</th>
    <th>Role</th>
    <th colspan="2"></th>
  </tr>
 
  <% @users.each do |user| %>
    <tr>
      <td><%= user.email %></td>
      <td><%= user.role %></td>
      <td><%= link_to 'Show', user_path(user, school_id: params[:school_id]) %></td>
      <td><%= link_to 'Edit', edit_user_path(user, school_id: params[:school_id]) %></td>
	<td><%= link_to 'Destroy', user_path(user, school_id: params[:school_id]),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>
