<h1>Add student to the course</h1>
<%= form_tag '/courses/add_student' do %>
  <p>
    <%= label_tag :course_title %><br>
    <%= text_field_tag 'course[title]' %>
  </p>

  <p>
    <%= label_tag :student_first_name %><br>
    <%= text_field_tag 'user[first_name]' %>
  </p>

   <p>
    <%= label_tag :student_last_name %><br>
    <%= text_field_tag 'user[last_name]' %>
  </p>
<%= submit_tag("Join") %>
<% end %>