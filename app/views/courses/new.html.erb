<h1>New Course</h1>
<%= form_tag '/courses/create_course' do %>

  <p>
    <%= label_tag :course_title %><br>
    <%= text_field_tag 'course[title]' %>
  </p>
 
  <p>
    <%= label_tag :teacher_first_name %><br>
    <%= text_field_tag 'user[first_name]' %>
  </p>

   <p>
    <%= label_tag :teacher_last_name %><br>
    <%= text_field_tag 'user[last_name]' %>
  </p>
<%= submit_tag("Create") %>
<% end %>