<%= render 'chapters/chapter' %>
<div class="col-sm-9">
   <h4><small>Resources</small></h4>
      <hr><p>


<div class="container">   
<% if !flash[:notice].blank? %>   
   <div>   
      <%= flash[:notice] %>   
   </div>   
<% end %>   
  
<br>   

<table class="table ">
  <thead>   
      <tr>   
         <th>Chapter</th>   
         <th>Name</th>   
         <th>Download Link</th>
         <% if current_user.role != 'student' %>
            <th>Action</th>  
         <%end %> 
      </tr>   
   </thead>

<tbody>   
      <% @resources.each do |resource| %>   
            
         <tr>  
            <td><%= resource.chapter.title %></td>  
            <td><%= resource.name %></td>   
            <td><%= link_to "Download", resource.attachment_url %></td>   
            <% if current_user.role != 'student' %>
            <td><%= link_to "Delete",  resource, method: :delete, confirm: "Are you sure you want to delete #{resource.name}?" %></td>   
            <%end %>
         </tr>   
            
      <% end %>   
   </tbody>   
      
</table>   
</div> 