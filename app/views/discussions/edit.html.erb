<%= render 'chapters/chapter' %>
 <div class="col-sm-9">
   <h4><small>Edit Discussion Topic</small></h4>
      <hr><p>
 
<%= form_tag '/discussions/update' do %>
   <p>
    <%= label_tag :discussion_title %><br>
    <%= text_field_tag 'discussion[title]' %>
  </p>

  <p>
    <%= label_tag :description %><br>
    <%= text_field_tag 'discussion[comment]' %>
  </p>
  
<%= submit_tag("create") %>
<% end %>
 